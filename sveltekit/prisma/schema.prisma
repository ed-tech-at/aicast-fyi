generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model ApiKey {
  apiId           Int      @id @default(autoincrement())
  apiType         String?
  apiKey          String?   @db.VarChar(255)
  apiPlaceholder  String?   @db.VarChar(255)
}

model Episode {
  id           String   @id @default(uuid())
  episodeUrl   String?   @unique @db.VarChar(255)
  email        String
  title        String?
  desc         String?
  apiKeyLLM    String?
  apiKeyAudio  String?
  createdDate  DateTime @default(now())
  updatedDate  DateTime?
}

model EpisodeElement {
  id             String   @id @default(uuid())
  createdDate    DateTime @default(now())
  type           String
  text           String?
  userQuestion   String?
  developerPrompt   String?
  f_episodeId    String
  position       Int
}

model Audio {
  id           String   @id @default(uuid())
  createdDate  DateTime @default(now())
  f_elementId  String
  voice_id     String
  text         String?
  language_code String
}

model LLMGeneratedText {
  id              String   @id @default(uuid())
  createdDate     DateTime @default(now())
  f_elementId     String
  developerPrompt String?
  prompt          String?
  result          String?
}



